<div
  role="alert"
  aria-live="assertive"
  aria-atomic="true"
  class="toast bg-white"
  data-bs-delay="15000"
  id="onlyToast"
  data-bs-backdrop="static"
>
  <div class="toast-header">
    <strong class="me-auto text-nowrap overflow-hidden">{{ title }}</strong>
    <button type="button" class="btn-close" data-bs-dismiss="toast" aria-label="Close"></button>
  </div>
  <div class="toast-body">
    <div class="d-flex flex-column">
      <div class="text-wrap">
        Got your report! {{#if withProgress}}You've made <strong>{{curCalls}}</strong> calls today. Can you reach
        <strong>{{goalCalls}}</strong> calls?{{/if}}
      </div>
      {{#if withProgress}}
      <div class="progress mt-2 mb-1">
        <div class="progress-bar bg-success" role="progressbar" style="width: 0%">{{curCalls}}/{{goalCalls}}</div>
      </div>
      {{/if}}
      <div class="small align-self-end mt-2">
        <button id="onlyToastButton" class="btn-sm small text-nowrap btn btn-outline-secondary" data-bs-dismiss="toast">
          Need to make a change?
        </button>
      </div>
    </div>
  </div>
</div>
